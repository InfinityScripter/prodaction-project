{
  "compilerOptions": {
    "outDir": "./dist/", //путь к папке с собранными файлами
    "noImplicitAny": true, //не разрешать неявный any использование переменных без типа
    "module": "es2022", //использовать модули es6
    "target": "es5", //целевая версия js
    "jsx": "react-jsx", //использовать jsx синтаксис
    "allowJs": true, //разрешить импорт js файлов
    "moduleResolution": "node", //разрешить импорт модулей node
    "baseUrl": "./", //путь к корневой папке проекта
    "paths": {
      "*": ["./src/*"] //пути для импорта модулей
    },
    "esModuleInterop": true, //разрешить импорт модулей es6 в стиле commonjs
    "allowSyntheticDefaultImports": true, //разрешить синтетический импорт по умолчанию
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
}
